<%- include("partials/header"); -%>

<div class="container" id="contact-us-form">
    <h1 class="form-contact">Contact Us</h1>
    <form class="form-contact" action="/ContactUs" method="post">
        <div class="form-group mt-5">
            <label for="name" class="mx-2">Name</label>
            <input type="text" name="Name" class="form-control form-input" placeholder="Enter your name">
        </div>
        <div class="form-group my-3">
            <label for="exampleInputEmail1" class="mx-2">Email address</label>
            <input type="email" name="Email" class="form-control form-input" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
        </div>
        <div class="form-group my-3">
            <label for="exampleInputPassword1" class="mx-2">Number</label>
            <input type="number" name="Number" class="form-control form-input" placeholder="Enter your number">
            <small id="number" class="form-text text-muted">We'll contact you from whatsapp</small>
        </div>
        <div class="form-check mb-5 d-flex justify-content-center">
            <button type="submit" class="btn btn-dark">Submit</button>
        </div>
    </form>
</div>
<%- include("partials/footer"); -%>
